<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.gallery.GalleryFragment">
    <!-- Updated layout to dark mode again 3 -->

    <!-- Row 1 -->
    <ImageButton
        android:id="@+id/imageButtonAlunos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Alunos"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_aluno"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonResponsaveis"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALUNOS"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonAlunos"
        app:layout_constraintStart_toStartOf="@+id/imageButtonAlunos"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonAlunos" />

    <ImageButton
        android:id="@+id/imageButtonResponsaveis"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Responsáveis"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_responsavel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonAlunos"
        app:layout_constraintTop_toTopOf="@+id/imageButtonAlunos" />

    <TextView
        android:id="@+id/textViewResponsaveis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESPONSÁVEIS"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonResponsaveis"
        app:layout_constraintStart_toStartOf="@+id/imageButtonResponsaveis"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonResponsaveis" />

    <!-- Row 2 -->
    <ImageButton
        android:id="@+id/imageButtonTurma"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Turma"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_turma"
        app:layout_constraintStart_toStartOf="@+id/imageButtonAlunos"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlunos" />

    <TextView
        android:id="@+id/textViewTurma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TURMA"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonTurma"
        app:layout_constraintStart_toStartOf="@+id/imageButtonTurma"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonTurma" />

    <ImageButton
        android:id="@+id/imageButtonEscola"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#F7C734"
        android:contentDescription="Escola"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_escola"
        app:layout_constraintStart_toStartOf="@+id/imageButtonResponsaveis"
        app:layout_constraintTop_toTopOf="@+id/imageButtonTurma" />

    <TextView
        android:id="@+id/textViewEscola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCOLA"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonEscola"
        app:layout_constraintStart_toStartOf="@+id/imageButtonEscola"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEscola" />

    <!-- Row 3 -->
    <ImageButton
        android:id="@+id/imageButtonCondutores"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Condutores"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_motorista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTurma" />

    <TextView
        android:id="@+id/textViewCondutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONDUTORES"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonCondutores"
        app:layout_constraintStart_toStartOf="@+id/imageButtonCondutores"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonCondutores" />

</androidx.constraintlayout.widget.ConstraintLayout>